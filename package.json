    "chai": "^5.1.1",
    "checkeeper-signature": "^0.0.1",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.4",
    "typescript": "^5.6.2"
